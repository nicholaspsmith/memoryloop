# Application URL (NextAuth.js v5)
AUTH_URL=http://localhost:3000

# NextAuth.js Secret (generate with: openssl rand -base64 32)
AUTH_SECRET=your-secret-key-here

# Anthropic API (Claude)
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# Ollama API (for embeddings and local LLM)
OLLAMA_BASE_URL=http://localhost:11434

# PostgreSQL Database (Supabase)
# IMPORTANT: Use the "Transaction" pooler connection string (port 6543), NOT "Direct Connection"
# Get this from: Supabase Dashboard -> Settings -> Database -> Connection String -> Transaction tab
DATABASE_URL=postgresql://postgres.PROJECT-REF:[YOUR-PASSWORD]@aws-0-us-east-1.pooler.supabase.com:6543/postgres

# Email Configuration (SMTP)
# Development: Use Ethereal (https://ethereal.email) or a test SMTP service
# Production: Use real SMTP provider (SendGrid, AWS SES, etc.)
SMTP_HOST=smtp.ethereal.email
SMTP_PORT=587
SMTP_USER=your-ethereal-username
SMTP_PASS=your-ethereal-password
SMTP_FROM=noreply@memoryloop.com

# Application URL for email links (required for password reset/verification emails)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Security Log Retention (optional, defaults to 90 days)
SECURITY_LOG_RETENTION_DAYS=90

# Environment
NODE_ENV=development
